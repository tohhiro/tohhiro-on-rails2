<h1>Posts</h1>

<div><%= link_to "New Post", new_post_path %></div>

<ul>
  <% @posts.each do |post| %>
  <li>
    <h2><%= post.title %> <%= link_to "編集", edit_post_path(post) %></h2>
    <p><%= post.content.present? ? post.content : "なし" %></p>
    <span><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></span>
  </li>
  <% end %>
</ul>
